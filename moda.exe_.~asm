TITLE MODA,MEDIA,MEDIANA

include "emu8086.inc"

DATOS SEGMENT

LISTA DB 7 DUP(?)
X DB 2
Y DB 2
MEDIA DB ?
MODA DB ?

DATOS ENDS

PILA SEGMENT

DB 64 DUP(?)

PILA ENDS

CODIGO SEGMENT

INICIO PROC FAR

ASSUME DS:DATOS, CS:CODIGO, SS:PILA

PUSH DS
MOV AX, 0
PUSH AX

MOV AX, DATOS
MOV DS, AX
MOV ES, AX


LEA SI, LISTA
GOTOXY X, Y
CALL PTHIS
DB "INSERTE UNA LISTA ORDENADA DE NUMEROS: ", 0
MOV X, 37
GOTOXY X, Y
INSERTAR:
ADD X, 4
GOTOXY X, Y
CALL SCAN_NUM
MOV [SI], CL
INC SI
CMP SI, 7
JNZ INSERTAR


MOV AX, 0
MOV SI, 0
SUMA1:
MOV AL, MEDIA
ADD AL, LISTA[SI]
MOV MEDIA, AL
INC SI
CMP SI, 7
JNZ SUMA1
JZ PROMEDIO

PROMEDIO:
MOV BL, 7
MOV AL, MEDIA
IDIV BL
MOV MEDIA, AL
MOV X, 2
ADD Y, 2
GOTOXY X, Y
CALL PTHIS
DB "LA MEDIA ES APROXIMADAMENTE:", 0
MOV X, 31
GOTOXY X, Y
MOV AX, 0
MOV AL, MEDIA
CALL PRINT_NUM_UNS

MEDIANA:
MOV SI, 0
ADD SI, 3
ADD Y, 2
MOV X, 2
GOTOXY X, Y
CALL PTHIS
DB "LA MEDIANA ES:", 0
MOV AX, 0
MOV AL, LISTA[SI]
ADD X, 15
GOTOXY X, Y
CALL PRINT_NUM_UNS

MOV SI, 0
MOV DI, 0
MOV CL, 1
MOV CH, 1
MOV AH, LISTA[SI]
MOV MODA, AH

CICLO_MODAL:
MOV AL, LISTA[SI]
INC DI
MOV BL, LISTA[DI]
CMP AL, BL
JE CASO1
JNE CASO2

CASO1:
ADD CL, 1
CMP CL, CH
JA CASO3
JMP INC_POS

CASO2:
MOV CL, 1
CMP DI, 7
JNZ INC_POS
JZ LA_MODA

CASO3:
MOV CH, CL
MOV AH, LISTA[SI]
MOV MODA, AH
CMP DI, 7
JNZ INC_POS
JZ LA_MODA

INC_POS:
INC SI
JMP CICLO_MODAL

LA_MODA:
ADD Y, 2
MOV X, 2
GOTOXY X, Y
CALL PTHIS
DB "LA MODA ES:", 0
MOV X, 14
GOTOXY X, Y
MOV AX, 0
MOV AL, MODA
CALL PRINT_NUM_UNS

SALIR:
ADD Y, 8
MOV X, 2
GOTOXY X, Y
CALL PTHIS
DB "HASTA LUEGO, GRACIAS POR TODO.", 0

RET

INICIO ENDP

CODIGO ENDS

DEFINE_SCAN_NUM
DEFINE_PTHIS
DEFINE_CLEAR_SCREEN
DEFINE_PRINT_NUM_UNS

END INICIO




; [SOURCE]: C:\emu8086\MySource\moda.asm
